CRGB leds[NUM_LEDS];

void setup() {
     FastLED.addLeds<WS2812B, DATA_PIN, GRB>(leds, NUM_LEDS);
     FastLED.setBrightness(CRGB(40,40,40));
}


const int __NUM_LEDS = 64; // per frame
const unsigned long __DELAY_MS = 225;

void loop() {

  FastLED.clear();
  for(int i = 0; i < __NUM_LEDS; i++)
  {
    leds[i] = pgm_read_dword(&(ledarray0[i]));
  }
  FastLED.show();
  delay(__DELAY_MS);

}
